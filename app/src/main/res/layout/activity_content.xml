<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuxuemingzhu.wechoice.activity.ContentActivity">


    <RelativeLayout
        android:id="@+id/ll_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <WebView
            android:id="@+id/wb_common"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/pb_content_above"
            style="@style/PocketProgressBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:indeterminate="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_common_error_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_bg"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_online_error_btn_retry"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:background="@mipmap/online_error_onclick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_online_error_btn_retry"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:text="网络连接失败，请点击重试"
                android:textColor="#888888"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
